	"version": "2.0.0",
	"tasks": [
		{
			"label": "start with browser",
			"type": "shell",
			"windows": {
				"command": "start msedge",
				"args": [
					"--new-window",
					"-inPrivate",
					"--window-size='360,640'",
					"http:\\127.0.0.1:4321"
				]
			},
			"linux": {
				"command": "firefox",
				"args": [
					"--no-remote",
					"--window-size='360,640'",
					"--private-window=http:\\127.0.0.1:4321"
				]
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"label": "start with firefox",
			"type": "shell",
			"windows": {
				"command": "start firefox",
				"args": [
					"--no-remote",
					"--window-size='360,640'",
					"--private-window=http:\\127.0.0.1:4321"
				]
			},
			"linux": {
				"command": "firefox",
				"args": [
					"--no-remote",
					"--window-size='360,640'",
					"--private-window=http:\\127.0.0.1:4321"
				]
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
